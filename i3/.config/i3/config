client.urgent           $black      $black      $white  $black    $black
client.placeholder      $black      $black      $white  $black    $black

client.background       $black

# custom shortcuts
bindsym XF86AudioPlay exec mpc toggle && pkill -RTMIN+11 i3blocks
bindsym XF86AudioPrev exec mpc prev && pkill -RTMIN+11 i3blocks
bindsym XF86AudioNext exec mpc next && pkill -RTMIN+11 i3blocks
bindsym XF86AudioStop exec mpc stop && pkill -RTMIN+11 i3blocks
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+10 i3blocks && pkill -RTMIN+11 i3blocks
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+10 i3blocks && pkill -RTMIN+11 i3blocks
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+10 i3blocks && pkill -RTMIN+11 i3blocks
bindsym Print exec scrot ~/Pictures/screenshots/%Y-%m-%d-%T-screenshot.png

#bindsym XF86MonBrightnessDown exec light -U 5
#bindsym XF86MonBrightnessUp exec light -U 5

workspace_auto_back_and_forth yes
bindsym $mod+z workspace back_and_forth
bindsym $mod+Shift+z move container to workspace back_and_forth

set $Locker i3lock && sleep 1
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Control+bracketleft mode "default"
}

