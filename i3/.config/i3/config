# super key
set $mod Mod4
font pango:Monospace 11
floating_modifier $mod
bindsym $mod+Return exec termite -e 'env SHELL=/usr/bin/fish fish'
bindsym $mod+Shift+q kill
bindsym $mod+d exec j4-dmenu-desktop --dmenu="dmenu -fn 'monospace-11' -i"

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
